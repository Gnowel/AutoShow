<Window x:Class="AutoShow.Views.Dialogs.EditEmployeeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoShow.Views.Dialogs"
        mc:Ignorable="d"
        Title="EditEmployeeDialog"
        Height="440" 
        Width="250"
        x:Name="EditEmployeeWindow"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        xmlns:vm="clr-namespace:AutoShow.ViewModels">
    
    <Window.DataContext>
        <vm:EditEmployeeVM/>
    </Window.DataContext>
    
    <Grid
        Background="{StaticResource CanvasBrush}">

        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid>
            <TextBlock
                Text="Редактировать сотрудника"
                FontSize="16"
                Foreground="White"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"/>

            <StackPanel
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="8">
                <Button 
                    Name="closeButton"
                    Style="{StaticResource BtnCloseMinimazeMaximize}"
                    Content="{StaticResource close_icon}"/>
            </StackPanel>
        </Grid>

        <Grid
            Grid.Row="1"
            Background="{StaticResource CanvasBrush}">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>

                <!--ФИО-->
                <Grid
                    Grid.Row="0"
                    Margin="10"
                    Background="{StaticResource DefaultBackgroundBrush}">

                    <TextBlock
                            Text="ФИО"
                            Foreground="White"
                            HorizontalAlignment="left"
                            Margin="10,5,0,0"/>

                    <TextBox
                            VerticalAlignment="Top"
                            Margin="10,25,0,5"
                            Width="180"
                            Style="{StaticResource ValidateTB}"
                            HorizontalAlignment="Left">
                        <TextBox.Text>
                            <Binding
                                Path="EditEmployee.FullName"
                                UpdateSourceTrigger="PropertyChanged">
                                <Binding.ValidationRules>
                                    <DataErrorValidationRule/>
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                </Grid>

                <!--Логин-->
                <Grid
                    Grid.Row="1"
                    Margin="10"
                    Background="{StaticResource DefaultBackgroundBrush}">

                    <TextBlock
                            Text="Логин"
                            Foreground="White"
                            HorizontalAlignment="left"
                            Margin="10,5,0,0"/>

                    <TextBox
                            VerticalAlignment="Top"
                            Margin="10,25,0,5"
                            Width="180"
                            Style="{StaticResource ValidateTB}"
                            HorizontalAlignment="Left">
                        <TextBox.Text>
                            <Binding
                                Path="EditEmployee.Login"
                                UpdateSourceTrigger="PropertyChanged">
                                <Binding.ValidationRules>
                                    <DataErrorValidationRule/>
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                </Grid>
                <!--Пароль-->
                <Grid
                    Grid.Row="2"
                    Margin="10"
                    Background="{StaticResource DefaultBackgroundBrush}">

                    <TextBlock
                            Text="Пароль"
                            Foreground="White"
                            HorizontalAlignment="left"
                            Margin="10,5,0,0"/>

                    <TextBox
                            VerticalAlignment="Top"
                            Margin="10,25,0,5"
                            Width="180"
                            Style="{StaticResource ValidateTB}"
                            HorizontalAlignment="Left"
                            Text="{Binding EditEmployee.Password}">
                        <!--<TextBox.Text>
                            <Binding
                                Path="EditEmployee.Password"
                                UpdateSourceTrigger="PropertyChanged">
                                <Binding.ValidationRules>
                                    <DataErrorValidationRule/>
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>-->
                    </TextBox>
                </Grid>
                <!--Телефон-->
                <Grid
                    Grid.Row="3"
                    Margin="10"
                    Background="{StaticResource DefaultBackgroundBrush}">

                    <TextBlock
                            Text="Номер телефона"
                            Foreground="White"
                            HorizontalAlignment="left"
                            Margin="10,5,0,0"/>

                    <TextBox
                            VerticalAlignment="Top"
                            Margin="10,25,0,5"
                            Width="180"
                            Style="{StaticResource ValidateTB}"
                            HorizontalAlignment="Left">
                        <TextBox.Text>
                            <Binding
                                Path="EditEmployee.Phone"
                                UpdateSourceTrigger="PropertyChanged">
                                <Binding.ValidationRules>
                                    <DataErrorValidationRule/>
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                </Grid>
                <!--Должность-->
                <Grid
                    Grid.Row="4"
                    Margin="10"
                    Background="{StaticResource DefaultBackgroundBrush}">

                    <TextBlock
                        Text="Должность"
                        Foreground="White"
                        Margin="5"/>

                    <ComboBox
                        Height="20"
                        Width="200"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Bottom"
                        Margin="5"
                        x:Name="Positions"
                        SelectedItem="{Binding SelectedPosition}"
                        ItemsSource="{Binding Positions , UpdateSourceTrigger=PropertyChanged}"
                        DisplayMemberPath="Name"
                        SelectedIndex="{Binding SelectedIndex}">
                        <!--<ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>-->
                        <!--<ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Text="{Binding Name}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>-->
                    </ComboBox>
                </Grid>
                <!--button-->
                <Grid
                    Grid.Row="5">

                    <Button
                        Command="{Binding AcceEditCommand}"
                        Width="100"
                        Height="30"
                        CommandParameter="{Binding ElementName=EditEmployeeWindow}"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Right"
                        Margin="0,0,120,5"
                        Content="Принять"
                        Style="{StaticResource AddButton}"
                        IsDefault="True"
                        />
                    <Button
                        Command="{Binding CanselCommand}"
                        CommandParameter="{Binding ElementName=EditEmployeeWindow}"
                        Style="{StaticResource AddButton}"
                        Width="100"
                        Height="30"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Right"
                        Content="Отменить"
                        Margin="0,0,10,5"
                        IsDefault="False"
                        />
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
